<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/save_description"
        android:layout_width="352dp"
        android:layout_height="59dp"
        android:background="#C0F4C9"
        android:text="@string/save_description"
        android:onClick="savedescriptionmethod"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

    <Button
        android:id="@+id/take_a_pic"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/ic_baseline_photo_camera_24"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/add_doc"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Explain_emergency">


    </Button>

    <Button
        android:id="@+id/add_doc"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/ic_baseline_picture_as_pdf_24"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/add_vid"
        app:layout_constraintHorizontal_bias=".60"
        app:layout_constraintStart_toEndOf="@id/take_a_pic"
        app:layout_constraintTop_toBottomOf="@id/Explain_emergency">

    </Button>

    <Button
        android:id="@+id/add_vid"
        android:layout_width="57dp"
        android:layout_height="55dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/ic_baseline_video"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/add_doc"
        app:layout_constraintTop_toBottomOf="@id/Explain_emergency">

    </Button>

    <TextView
        android:id="@+id/welcome__ek2"
        android:layout_width="80dp"
        android:layout_height="29.5dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome__ek2_string"
        android:textColor="@color/_10_50_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/ellipse_2_ek1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ellipse_1_ek1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-67dp"
        android:layout_marginTop="-30dp"
        android:alpha="0.40999999642372"
        android:background="@drawable/ellipse_1_ek1_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/ellipse_2_ek1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-90dp"
        android:alpha="0.40999999642372"
        android:background="@drawable/ellipse_1_ek1_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ellipse_1_ek1"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/send"
        android:layout_width="352dp"
        android:layout_height="59dp"
        android:layout_marginBottom="44dp"
        android:background="#C0F4C9"
        android:text="@string/send_ek1_string"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_doc"
        app:layout_constraintVertical_bias="0.648">

    </Button>

    <EditText
        android:id="@+id/Explain_emergency"
        android:layout_width="352dp"
        android:layout_height="152dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/briefly_explain_the_emergency_ek1_string"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/take_a_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ellipse_2_ek1"
        app:layout_constraintVertical_bias=".50" />

</androidx.constraintlayout.widget.ConstraintLayout>