<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/select_doc"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginTop="332dp"
        android:background="#C0F4C9"
        android:text="@string/select_doc"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ellipse_2_ek1">

    </Button>

    <View
        android:id="@+id/ellipse_1_ek1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-67dp"
        android:layout_marginTop="-30dp"
        android:alpha="0.40999999642372"
        android:background="@drawable/ellipse_1_ek1_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <View
        android:id="@+id/ellipse_2_ek1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-90dp"
        android:alpha="0.40999999642372"
        android:background="@drawable/ellipse_1_ek1_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ellipse_1_ek1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upload_doc"
        android:layout_width="352dp"
        android:layout_height="59dp"
        android:layout_marginBottom="164dp"
        android:background="#C0F4C9"
        android:text="@string/upload_doc"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_doc"
        app:layout_constraintVertical_bias="1.0">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>